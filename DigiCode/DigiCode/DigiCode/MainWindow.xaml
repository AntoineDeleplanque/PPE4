<Window x:Class="DigiCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projet DigiCode" Height="500" Width="700">
    <Grid>
        <ListView Name="SalleListView" HorizontalAlignment="Left" Height="333" Margin="6,41,0,0" VerticalAlignment="Top" Width="672" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Salle" Width="665" DisplayMemberBinding="{Binding Path=Libelle}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Digicode" Name="TitreLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="672" Margin="6,-9,0,0" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Button Content="Voir le Code" Name="ShowCodeButton" HorizontalAlignment="Left" Margin="150,403,0,0" VerticalAlignment="Top" Width="150" Height="57"/>
        <Button Content="Réinitialiser le code" Name="ResetCodeButton" HorizontalAlignment="Left" Margin="400,403,0,0" VerticalAlignment="Top" Width="150" Height="57" Click="ResetCodeButton_Click"/>

    </Grid>
</Window>
